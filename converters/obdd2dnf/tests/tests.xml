<?xml version="1.0" encoding="iso-8859-1" standalone="no"?>
<!DOCTYPE testsuite SYSTEM "../../testsuite/lydia_tests.dtd">

<testsuite>
  <separator>Arithmetic Circuits (Flat):</separator>
  <test>
    <title>2 chained inverters</title>
    <input>2inverters.obdd</input>
    <output>2inverters.dnf</output>
  </test>
  <test>
    <title>3 chained inverters</title>
    <input>3inverters.obdd</input>
    <output>3inverters.dnf</output>
  </test>
  <test>
    <title>4 chained inverters</title>
    <input>4inverters.obdd</input>
    <output>4inverters.dnf</output>
  </test>
  <test>
    <title>10 chained inverters</title>
    <input>10inverters.obdd</input>
    <output>10inverters.dnf</output>
  </test>
  <test>
    <title>Boolean polycell</title>
    <input>polycell.obdd</input>
    <output>polycell.dnf</output>
  </test>
  <test>
    <title>1-bit full adder</title>
    <input>2adder-weak.obdd</input>
    <output>2adder-weak.dnf</output>
  </test>
  <test>
    <title>1-bit subtractor</title>
    <input>2subtractor.obdd</input>
    <output>2subtractor.dnf</output>
  </test>
  <test>
    <title>3 inverters and an AND gate</title>
    <input>inverted-and.obdd</input>
    <output>inverted-and.dnf</output>
  </test>
  <test>
    <title>1-bit full adder</title>
    <input>2adder-strong.obdd</input>
    <output>2adder-strong.dnf</output>
  </test>
  <test>
    <title>copier</title>
    <input>copier.obdd</input>
    <output>copier.dnf</output>
  </test>
  <test>
    <title>stereo</title>
    <input>stereo.obdd</input>
    <output>stereo.dnf</output>
  </test>

  <separator>Arithmetic Circuits (Hierarchical):</separator>
  <test>
    <title>Boolean polycell</title>
    <input>polycell.hobdd</input>
    <output>polycell.hdnf</output>
  </test>

  <separator>Observations:</separator>
  <test>
    <title>empty hierarchy</title>
    <input>empty.obs.hobdd</input>
    <output>empty.terms</output>
  </test>
  <test>
    <title>2 chained inverters</title>
    <input>2inverters.obs.hobdd</input>
    <output>2inverters.terms</output>
  </test>
  <test>
    <title>3 inverters</title>
    <input>3inverters.obs.hobdd</input>
    <output>3inverters.terms</output>
  </test>
  <test>
    <title>4 chained inverters</title>
    <input>4inverters.obs.hobdd</input>
    <output>4inverters.terms</output>
  </test>
  <test>
    <title>1-bit full adder</title>
    <input>2adder.obs.hobdd</input>
    <output>2adder.terms</output>
  </test>
  <test>
    <title>1-bit subtractor</title>
    <input>2subtractor.obs.hobdd</input>
    <output>2subtractor.terms</output>
  </test>
  <test>
    <title>Boolean polycell</title>
    <input>polycell.obs.hobdd</input>
    <output>polycell.terms</output>
  </test>
  <test>
    <title>basic array expressions</title>
    <input>basic_arrays.obs.hobdd</input>
    <output>basic_arrays.terms</output>
  </test>
  <test>
    <title>74182</title>
    <input>74182.obs.hobdd</input>
    <output>74182.terms</output>
  </test>
  <test>
    <title>74L85</title>
    <input>74L85.obs.hobdd</input>
    <output>74L85.terms</output>
  </test>
  <test>
    <title>74283</title>
    <input>74283.obs.hobdd</input>
    <output>74283.terms</output>
  </test>
  <test>
    <title>74181</title>
    <input>74181.obs.hobdd</input>
    <output>74181.terms</output>
  </test>
</testsuite>
